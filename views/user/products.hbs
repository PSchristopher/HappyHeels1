<div id="preloader">
    <div id="ctn-preloader" class="ctn-preloader">
        <div class="animation-preloader">
            <div class="spinner"></div>
        </div>
        <div class="loader">
            <div class="row">
                <div class="col-3 loader-section section-left">
                    <div class="bg"></div>
                </div>
                <div class="col-3 loader-section section-left">
                    <div class="bg"></div>
                </div>
                <div class="col-3 loader-section section-right">
                    <div class="bg"></div>
                </div>
                <div class="col-3 loader-section section-right">
                    <div class="bg"></div>
                </div>
            </div>
        </div>
    </div>
</div>
<!-- Scroll-top -->
<button class="scroll-top scroll-to-target" data-target="html">
    <i class="fas fa-angle-up"></i>
</button>
<!-- Scroll-top-end-->

<!-- main-area -->
<main>

    <!-- breadcrumb-area -->
    <section class="breadcrumb-area breadcrumb-bg" data-background="/img/bg/18899173.jpg">
        <div class="container">
            <div class="row">
                <div class="col-12">
                    <div class="breadcrumb-content">
                        <h2>Shop Sidebar</h2>
                        <nav aria-label="breadcrumb">
                            <ol class="breadcrumb">
                                <li class="breadcrumb-item"><a href="index.html">Home</a></li>
                                <li class="breadcrumb-item active" aria-current="page">Shop</li>
                            </ol>
                        </nav>
                    </div>
                </div>
            </div>
        </div>
    </section>
    <!-- breadcrumb-area-end -->

    <!-- shop-area -->
    <section class="shop-area pt-50 pb-70">
        <div class="container">
            <div class="row">
                <div class="col-xl-3 col-lg-4">
                    <aside class="shop-sidebar">
                        <div class="widget side-search-bar">
                            <form action="#">
                                <input type="text">
                                <button><i class="flaticon-search"></i></button>
                            </form>
                        </div>
                        <div class="widget">
                            <h4 class="widget-title">Product Categories</h4>
                            <div class="shop-cat-list">

                                {{#each show}}
                                <ul>
                                    {{!-- <li><a href="" onclick="findCatePro(event,'{{this._id}}')">{{this.category}}</a> --}}
                                    <li><a href="/catWiseproducts/{{this._id}}" >{{this.category}}</a>
                                    </li>
                                </ul>
                                {{/each}}
                            </div>
                        </div>
                        <div class="widget">
                            <h4 class="widget-title">Price Filter</h4>
                            <div class="price_filter" style="width: 178px;">
                                <div id="slider-range"></div>
                                <div class="price_slider_amount">
                                    <span>Price :</span>
                                    <input type="text" id="amount" name="price" placeholder="Add Your Price" />
                                </div>
                            </div>
                        </div>

                    </aside>
                </div>
                <div class="col-xl-9 col-lg-8">

                    <div class="shop-top-meta mb-35">
                        <div class="row">
                        </div>
                    </div>
                    <div class="row">
                        {{#each items}}
                        <div class="col-xl-4 col-sm-6">
                            <div class="new-arrival-item text-center mb-50">
                                <div class="thumb mb-25">
                                    {{#if this.originalPrice}}
                                    <div class="discount-tag">- {{this.offerPercentage}}%</div>
                                    {{/if}}
                                    <a href="/productdetail/{{this._id}}"><img style="width: 296px;height: 344px;"
                                            src="/imageUpload/{{this.image.[0]}}" alt=""></a>
                                    <div class="product-overlay-action">
                                        <ul>
                                            {{#if this.wishlist}}
                                            <li><a href=""
                                                    onclick="deletewisilistProduct(event,'{{../userName._id}}','{{this._id}}')"
                                                    id=""><i class="bi bi-heart-fill"></i></a></li>


                                            {{else}}
                                            <li><a href="" onclick="addtoWisilist(event,'{{this._id}}')" id=""><i
                                                        class="far fa-heart"></i></a></li>
                                            {{/if}}
                                            <li><a href="/productdetail/{{this._id}}"><i class="far fa-eye"></i></a>
                                            </li>
                                        </ul>
                                    </div>
                                </div>
                                <div class="content">
                                    <h5><a href="/productdetail/{{this._id}}">{{this.name}}</a></h5>
                                    <span class="price">₹{{this.price}}</span>
                                    {{#if this.originalPrice}}
                                    <del class="font-weight-bold text-danger"><span
                                            class="price ">₹{{this.originalPrice}}</span></del>
                                    {{/if}}
                                </div>
                            </div>
                        </div>
                        {{/each}}

                    </div>
                    <div class="pagination-wrap">
                        <ul>
                            <li class="prev"><a href="#">Prev</a></li>
                            <li><a href="#">1</a></li>
                            <li class="active"><a href="#">2</a></li>
                            <li><a href="#">3</a></li>
                            <li><a href="#">4</a></li>
                            <li><a href="#">...</a></li>
                            <li><a href="#">10</a></li>
                            <li class="next"><a href="#">Next</a></li>
                        </ul>
                    </div>
                </div>

            </div>
        </div>
    </section>
    <!-- shop-area-end -->

</main>
<!-- main-area-end -->
