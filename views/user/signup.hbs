					{{!-- <div class="form-group"> --}}
						<div class="form-wrapper">
							<label for="">Name</label>
							<input type="text" id="name" name="name" class="form-control" onkeyup="validateName()">
							<span id="nameError" class="text-danger fw-bold"></span>
						</div>
                        <div class="form-wrapper">
						<label for="">Phone</label>
						<input type="number" id="phone" name="phone" class="form-control" onkeyup="validatePhonenum()" >
						<span id="phoneError" class="text-danger fw-bold"></span>
					</div>
					<div class="form-wrapper">
						<label for="">Email</label>
						<input type="email" id="email" name="email" class="form-control" onkeyup="validateEmail()">
					<span id="emailError" class="text-danger fw-bold"></span>
					</div>
					<div class="form-wrapper">
						<label for="">Password</label>
						<input type="password" id="pwd" name="password" class="form-control" onkeyup="validatePassword()" >
					<span id="pass-error" class="text-danger fw-bold"></span>
					</div>
