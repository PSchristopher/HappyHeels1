
{{#if otpLogin}}
		<div class="wrapper" style="background-image: url('images/bg-registration-form-2.jpg'); min-height:  565px;">
			<div class="inner d-flex justify-content-center">
				<form action="/otp_login" method="post">
					<h3>Log In Form</h3>
					
					<div class="form-wrapper">
						<label for="">Phone</label>
						<input type="number" id="phone" name="phone" class="form-control">
						
					</div>

					{{#if loginErr}}
                    <p class="error text-danger text-center">{{loginErr}}</p>
                {{/if}}
					<button type="submit" class="buttn mt-3">Get Otp</button>
                    <div class="mt-3">Dont have account? <a href="/user_signup" class="adec">Create One</a></div>
				</form>
			</div>
		</div>


	{{else}}
		<div class="wrapper" style="background-image: url('/public/images/loginbackgrnd.jpg');">
			<div class="inner d-flex justify-content-center">
				<form action="/user_signin" method="post">
					<h3>Log In Form</h3>
					{{#if loginErr}}
					<p class="text-danger">{{loginErr}}</p>
					{{/if}}
					<div class="form-wrapper">
						<label for="">Email</label>
						<input type="text" name="email" class="form-control">
					</div>
					<div class="form-wrapper">
						<label for="">Password</label>
						<input type="password" name="password" class="form-control">
					</div>
					<button type="submit" class="buttn mt-3">Log In</button>
                    <div class="mt-3">Dont have account? <a href="/user_signup" class="adec">Create One</a></div>
					<div class="mt-3"><a href="/otp_login" class="adec">Login With Otp</a></div>
				</form>
			</div>
		</div>
{{/if}}