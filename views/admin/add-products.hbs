        <form action="/admin/add-products" enctype="multipart/form-data" method="post" class="pt-5">
            <!-- categorie name input -->
            <div class="form-outline mb-4 ">
                <label class="form-label" for="form2Example1"> Name</label>
                <input type="name" name="name" id="form2Example1" class="form-control" required />

            </div>
            <div class="form-outline mb-4 ">
                
                <div class="row">
                    <div class="col-md-12">
                        <h6 class="input-title mt-0">Category</h6>
                        <select class="select2 form-control mb-3 custom-select" name="category"style="width: 100%; height:36px;">
                            <option>select</option>
                            <optgroup>
                            {{#each show}}
                                <option value="{{this._id}}" >{{this.category}}</option>
                                {{/each}}
                            </optgroup>
                        </select>
                    </div>

                </div>


            </div>
            <div class="form-outline mb-4 ">
                <label class="form-label" for="form2Example1">Discription</label>
                <input type="name" name="discription" id="form2Example1" class="form-control"  required />

            </div>
            <div class="form-outline mb-4 ">
                <label class="form-label" for="form2Example1">Price</label>
                <input type="number" name="price" id="form2Example1" class="form-control" required />

            </div>

            <!-- image input -->
            <div class="form-outline mb-4">
                <label class="form-label" for="form2Example2">Image</label>
                <input type="file" id="form2Example2" class="form-control" name="image" multiple />
            </div>

            <!-- Submit button -->
            <button type="submit" class="btn btn-primary btn-block mb-4">Add Product</button>


    </div>
    </form>
</div>
</div>