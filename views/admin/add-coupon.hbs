<div class="row">
    <div class="col-12">
        <div class="card">
            <div class="card-body">

                <h4 class="mt-0 header-title">ADD COUPON</h4>

                {{#if err}}
                <div class="alert alert-danger" role="alert">
                    <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor"
                        class="bi bi-exclamation-octagon-fill" viewBox="0 0 16 16">
                        <path
                            d="M11.46.146A.5.5 0 0 0 11.107 0H4.893a.5.5 0 0 0-.353.146L.146 4.54A.5.5 0 0 0 0 4.893v6.214a.5.5 0 0 0 .146.353l4.394 4.394a.5.5 0 0 0 .353.146h6.214a.5.5 0 0 0 .353-.146l4.394-4.394a.5.5 0 0 0 .146-.353V4.893a.5.5 0 0 0-.146-.353L11.46.146zM8 4c.535 0 .954.462.9.995l-.35 3.507a.552.552 0 0 1-1.1 0L7.1 4.995A.905.905 0 0 1 8 4zm.002 6a1 1 0 1 1 0 2 1 1 0 0 1 0-2z" />
                    </svg> {{err}}
                </div>
                {{/if}}
                {{#if succ}}
                <div class="alert alert-success" role="alert">
                    <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor"
                        class="bi bi-check2-circle" viewBox="0 0 16 16">
                        <path
                            d="M2.5 8a5.5 5.5 0 0 1 8.25-4.764.5.5 0 0 0 .5-.866A6.5 6.5 0 1 0 14.5 8a.5.5 0 0 0-1 0 5.5 5.5 0 1 1-11 0z" />
                        <path
                            d="M15.354 3.354a.5.5 0 0 0-.708-.708L8 9.293 5.354 6.646a.5.5 0 1 0-.708.708l3 3a.5.5 0 0 0 .708 0l7-7z" />
                    </svg>{{succ}}
                </div>

                {{/if}}

                <div class="row">
                    <div class="col-md-6">
                        <div class="p-20">
                            <form action="/admin/addCoupon" method="post">
                                <div class="form-group">
                                    <label>Coupon Name</label>
                                    <input type="text" placeholder="Enter your Coupon Name" name="name"
                                        class="form-control">

                                </div>
                                <div class="form-group">
                                    <label>COUPON CODE</label>
                                    <input type="text" placeholder="Enter Your Coupon Code" name="code"
                                        class="form-control">

                                </div>
                                <div class="form-group">
                                    <label>COUPON VALIDITY DATE</label>
                                    <input type="text" class="form-control" name="endingdate"
                                        placeholder="Enter Your Ending Date" id="mdates">

                                </div>
                                <div class="form-group">
                                    <label>COUPON VALUE in %</label>
                                    <input type="number" placeholder="Enter Your Coupon Value" name="value"
                                        class="form-control">

                                </div>

                                <button type="submit"> ADD COUPON </button>


                            </form>
                        </div>
                    </div>


                </div> <!-- end row -->

            </div>
        </div>
    </div> <!-- end col -->
</div>