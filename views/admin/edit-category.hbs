        <form action="/admin/updatecategory/{{categoryId._id}}" enctype="multipart/form-data" method="post"
            class="pt-5">
            <!-- categorie name input -->
            <div class="form-outline mb-4 ">


                <div class="row">
                    <div class="col-md-12">
                        <label class="form-label" for="form2Example1">Category</label>
                        <input type="name" name="category" class="form-control" value="{{categoryId.category}}">


                        {{!-- <select class="select2 form-control mb-3 custom-select" name="category"
                            style="width: 100%; height:36px;">
                            <option>Select</option>
                            <optgroup>
                                {{#each show}}
                                <option>{{this.category}}</option>
                                {{/each}}
                            </optgroup>
                        </select> --}}
                    </div>




                </div>

                <!-- image input -->
                <div class="form-outline mb-4">
                    <label class="form-label" for="form2Example2">Image</label>
                    <img style="width:80px;height: 80px;" src="/imageUpload/{{categoryId.image}}" alt="" id="imgView">
                    <input type="file" id="form2Example2" class="form-control" name="image"
                        onchange="viewImage(event)" />
                </div>

                <!-- Submit button -->
                <button type="submit" class="btn btn-primary btn-block mb-4">Update Category</button>


            </div>
        </form>
    </div>
</div>

<script>
    function viewImage(event) {
        document.getElementById('imgView').src = URL.createObjectURL(event.target.files[0])
    }
</script>